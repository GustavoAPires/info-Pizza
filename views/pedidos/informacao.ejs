<!DOCTYPE html>
<html>
    <head>
        <title>Fazer Pedido</title>
        <% include ../head %>
    </head>
    <body>
        <% if(locals.status){ %>
            <p class="alert alert-info"><%=status%></p>
        <%}%>
        <div>
            <div class ="container min-container">
                <% if(!pedido.id) { %>
                  <h2 class="basic-title">Fazer Pedido</h2>
                <%} else { %>
                  <h2 class="basic-title">Alterar pedido</h2>
                <% } %>
                <div class="errors">
                   <%if(locals.erros){%>
                    <ul style="list-style-type: none; padding: 0px;">
                        <% erros.forEach((erro) => {%>
                        <li class="alert alert-danger" style="padding: 0.5em;"><%= erro.msg %></li>
                   <%})}%>
                   </ul>
                </div>
                <% if(!pedido.id) { %>
                <form action="/pedidos" method="post" class="well" role="form">
                <%} else { %>
                <form action="/pedidos/<%=pedido.id%>?_method=PUT" method="post" class="well" role="form">
                <% } %>
                    <div class="form-group">
                        <label for="titulo" id="infoTitulos">Nome:</label> <br>
                        <label for="cliente" id="infoCliente"> <%=pedido.cliente%> </label>                        
                    </div>
                    <div class="form-group">
                        <label for="telefone" id="infoTitulos">Telefone:</label> <br>
                        <label for="cliente" id="infoCliente"> <%=pedido.telefone%> </label>    
                    </div>
                    <div class="form-group">
                        <label for="endereco" id="infoTitulos">Endere√ßo:</label> <br>
                        <label for="cliente" id="infoCliente"> <%=pedido.endereco%> </label>    
                    </div>
                    <div class="form-group">
                            <label for="endereco" id="infoTitulos">CPF:</label> <br>
                            <label for="cliente" id="infoCliente"> <%=pedido.cpf%> </label>    
                        </div>
                    <div class="form-group">
                        <label for="pedido" id="infoTitulos">Pedido:</label> <br>
                        <label for="cliente" id="infoCliente"> <%=pedido.pedido%> </label>    
                    </div>
                    <div class="form-group">
                        <label for="status" id="infoTitulos">Status Atual:</label> <br>
                        <label for="status" id="infoStatus"> <%=pedido.status%> </label>    
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <label for="pedido" id="infoTitulos">Alterar Status Para:</label> <br>
                            <select name="status" id="infoAlterarStatus">
                                <option selected="selected">  </option>
                                <option value="Aguardando Preparo">Aguardando Preparo</option>
                                <option value="Preparo Iniciado">Preparo Iniciado</option>
                                <option value="Saiu P/ Entrega">Saiu P/ Entrega</option>
                                <option value="Entregue">Entrege</option>
                                <option value="Cancelado" style="color: red">Cancelado</option>
                            </select>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Salvar</button>
                </form>
            </div>
        </div>
    </body>
</html>    