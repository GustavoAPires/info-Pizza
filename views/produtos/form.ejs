<!DOCTYPE html>
<html>
    <head>
        <title>Cadastro de Produto</title>
        <% include ../head %>
    </head>
    <body>
        <% if(locals.status){ %>
            <p class="alert alert-info"><%=status%></p>
        <%}%>
        <div>
            <div class ="container min-container">
                <% if(!produto.id) { %>
                  <h2 class="basic-title">Novo Produto</h2>
                <%} else { %>
                  <h2 class="basic-title">Alterar Produto</h2>
                <% } %>
                <div class="errors">
                   <%if(locals.erros){%>
                    <ul style="list-style-type: none; padding: 0px;">
                        <% erros.forEach((erro) => {%>
                        <li class="alert alert-danger" style="padding: 0.5em;"><%= erro.msg %></li>
                   <%})}%>
                   </ul>
                </div>
                <% if(!produto.id) { %>
                <form action="/produtos" method="post" class="well" role="form">
                <%} else { %>
                <form action="/produtos/<%=produto.id%>?_method=PUT" method="post" class="well" role="form">
                <% } %>
                    <div class="form-group">
                        <label for="titulo">Nome</label>
                        <div class="input-group">
                            <input type="text" name="nome" placeholder="Nome do produto" value="<%=produto.nome%>" size="80"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="preco">Preço</label>
                        <div class="input-group">
                            <input type="text" name="preco" placeholder="Preço do produto" value="<%=produto.preco%>" size="80"/>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Salvar</button>
                </form>
            </div>
        </div>
    </body>
</html>    